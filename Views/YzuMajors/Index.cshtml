@model IEnumerable<WebApp2020.Models.YzuMajor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MajorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YzuSchool.SchoolName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MajorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YzuSchool.SchoolName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MajorID }) |
                @Html.ActionLink("Details", "Details", new { id = item.MajorID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MajorID })
            </td>
        </tr>
    }

</table>

@using (Html.BeginForm("Success", "Admin", FormMethod.Get))
{
<button class="btn btn-warning" type="submit">Go To Admin</button>
}